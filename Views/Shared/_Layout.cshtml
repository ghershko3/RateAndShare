<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rate & Share</title>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/Images/icon.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-dark text-white">
    <div>
        <div class="container">
            <div class="row align-items-start justify-content-end">
                <div class="col d-flex justify-content-between">
                    <ul class="nav nav-pills">
                        <li class="nav-item menu-item" id="home-tab">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item menu-item" id="rates-tab">
                            <a class="nav-link " href="@Url.Action("Index", "Rates")">Rates</a>
                        </li>
                        <li class="nav-item menu-item" id="songs-tab">
                            <a class="nav-link " href="@Url.Action("Index", "Songs")">Songs</a>
                        </li>
                        @{
                            if (HttpContext.Current.Session["UserId"] != null && HttpContext.Current.Session["IsAdmin"] != null && (bool)HttpContext.Current.Session["IsAdmin"])
                            {
                                <li class="nav-item" id="statistics-tab">
                                    @Html.ActionLink("Statistics", "Index", "Statistics", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item" id="weather-tab">
                                    @Html.ActionLink("Weather", "Index", "Countries", null, new { @class = "nav-link" })
                                </li>
                            }
                        }
                    </ul>

                    <ul class="nav nav-pills align-middle" id="pills-tab" role="tablist">
                        @{
                            if (HttpContext.Current.Session["UserId"] == null)
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Login", "Login", "Users", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Register", "Register", "Users", null, new { @class = "nav-link" })
                                </li>
                            }

                            if (HttpContext.Current.Session["UserId"] != null)
                            {
                                <li class="nav-item right-nav-item d-flex flex-row align-items-center">
                                    @Html.ActionLink("Logout", "Logout", "Users", null, new { @class = "nav-link" }) |
                                    <span class="p-2">Hi @HttpContext.Current.Session["userName"]</span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Layout.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
